{
  "extends": ["airbnb", "prettier"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7
  },
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "plugins": ["prettier", "mocha"],
  "rules": {
    "strict": 0,
    "comma-dangle": [
      "warn",
      {
        "functions": "never",
        "objects": "always-multiline",
        "arrays": "always-multiline",
        "imports": "always-multiline"
      }
    ],
    "quotes": ["error", "single"],
    "no-trailing-spaces": [
      "warn",
      {
        "skipBlankLines": true
      }
    ],
    "func-names": ["error", "as-needed"],
    "no-underscore-dangle": [
      "error",
      {
        "allow": ["_id", "_creator", "_ref", "_json"]
      }
    ],
    "prettier/prettier": [
      "error",
      {
        "printWidth": 80,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "arrowParens": "always",
        "tabWidth": 2,
        "singleQuote": true
      }
    ],
    "arrow-parens": ["error", "always"],
    "mocha/no-exclusive-tests": "error",
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/prop-types": 0,
    "object-curly-newline": 0,
    "function-paren-newline": 0,
    "jsx-a11y/anchor-is-valid": [
      "never",
      {
        "components": ["Link"],
        "specialLink": ["hrefLeft", "hrefRight"],
        "aspects": ["noHref", "invalidHref", "preferButton"]
      }
    ],
    "jsx-a11y/label-has-for": [
      2,
      {
        "components": ["Label"],
        "required": {
          "every": ["id"]
        },
        "allowChildren": false
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src/"]
      }
    }
  }
}
