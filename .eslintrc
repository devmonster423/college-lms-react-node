{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7
  },
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "plugins": ["prettier", "mocha"],
  "rules": {
    "strict": 0,
    "comma-dangle": [
      "warn",
      {
        "functions": "never",
        "objects": "always-multiline",
        "arrays": "always-multiline"
      }
    ],
    "quotes": ["error", "single"],
    "no-trailing-spaces": [
      "warn",
      {
        "skipBlankLines": true
      }
    ],
    "func-names": ["error", "as-needed"],
    "no-underscore-dangle": [
      "error",
      {
        "allow": ["_id"]
      }
    ],
    "prettier/prettier": "error",
    "arrow-parens": ["error", "always"],
    "mocha/no-exclusive-tests": "error"
  }
}
